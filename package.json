{
  "name": "document-sharing-platform",
  "version": "1.0.0",
  "description": "Open source document sharing platform with shareable links",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
